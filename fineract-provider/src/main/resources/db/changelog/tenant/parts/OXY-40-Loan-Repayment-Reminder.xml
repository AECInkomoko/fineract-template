<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="insert-x_registered_table-for-loan-repayment-reminder-settings" author="bosco@fiter.io">
        <preConditions>
            <sqlCheck expectedResult="0">select count(*) from x_registered_table where registered_table_name = 'loan_repayment_reminder_settings'</sqlCheck>
        </preConditions>
        <sql>
            <![CDATA[
          INSERT INTO  x_registered_table (registered_table_name,application_table_name,entity_subtype,category) VALUES ('loan_repayment_reminder_settings','m_office',null,100);
             ]]>
        </sql>
    </changeSet>

    <changeSet id="create-loan_repayment_reminder_settings-data_table" author="bosco@fiter.io">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="loan_repayment_reminder_settings"/>
            </not>
        </preConditions>
        <createTable tableName="loan_repayment_reminder_settings">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"  />
            </column>
            <column name="number_of_days_to_due_date" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="office_id" type="bigint" defaultValueNumeric="1">
                <constraints nullable="false" foreignKeyName="FK_loan_repayment_reminder_settings-data_table_m_product_loan" references="m_office(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-loan_repayment_reminder_settings-datatable-permissions" author="bosco@fiter.io">
        <sql>
            INSERT INTO m_permission ( grouping, CODE, entity_name, action_name, can_maker_checker )
            VALUES
            ( 'datatable', 'CREATE_loan_repayment_reminder_settings', 'loan_repayment_reminder_settings', 'CREATE', true );

            INSERT INTO m_permission ( grouping, CODE, entity_name, action_name, can_maker_checker )
            VALUES
            ( 'datatable', 'CREATE_loan_repayment_reminder_settings_CHECKER', 'loan_repayment_reminder_settings', 'CREATE', false );

            INSERT INTO m_permission ( grouping, CODE, entity_name, action_name, can_maker_checker )
            VALUES
            ( 'datatable', 'READ_loan_repayment_reminder_settings', 'loan_repayment_reminder_settings', 'READ', false );

            INSERT INTO m_permission ( grouping, CODE, entity_name, action_name, can_maker_checker )
            VALUES
            ( 'datatable', 'UPDATE_loan_repayment_reminder_settings', 'loan_repayment_reminder_settings', 'UPDATE', true );

            INSERT INTO m_permission ( grouping, CODE, entity_name, action_name, can_maker_checker )
            VALUES
            ( 'datatable', 'UPDATE_loan_repayment_reminder_settings_CHECKER', 'loan_repayment_reminder_settings', 'UPDATE', false );

            INSERT INTO m_permission ( grouping, CODE, entity_name, action_name, can_maker_checker )
            VALUES
            ( 'datatable', 'DELETE_loan_repayment_reminder_settings', 'loan_repayment_reminder_settings', 'DELETE', true );

            INSERT INTO m_permission ( grouping, CODE, entity_name, action_name, can_maker_checker )
            VALUES
            ( 'datatable', 'DELETE_loan_repayment_reminder_settings_CHECKER', 'loan_repayment_reminder_settings', 'DELETE', false );
        </sql>
    </changeSet>

    <changeSet id="create-m_loan_repayment_reminder_table" author="bosco@fiter.io">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="m_loan_repayment_reminder"/>
            </not>
        </preConditions>
        <createTable tableName="m_loan_repayment_reminder">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"  />
            </column>
            <column name="loan_id" type="bigint">
                <constraints nullable="false" foreignKeyName="FK_m_loan_repayment_reminder-m_loan_id" references="m_loan(id)"/>
            </column>
            <column name="client_id" type="bigint">
                <constraints nullable="true" foreignKeyName="FK_m_loan_repayment_reminder-client_id" references="m_client(id)"/>
            </column>
            <column name="group_id" type="bigint">
                <constraints nullable="true" foreignKeyName="FK_m_loan_repayment_reminder-group_id" references="m_group(id)"/>
            </column>
            <column name="loan_product_id" type="bigint">
                <constraints nullable="false" foreignKeyName="FK_m_loan_repayment_reminder-loan_product_id" references="m_product_loan(id)"/>
            </column>
            <column name="loan_schedule_id" type="bigint">
                <constraints nullable="false" foreignKeyName="FK_m_loan_repayment_reminder-loan_schedule_id" references="m_loan_repayment_schedule(id)"/>
            </column>
            <column name="loan_repayment_reminder_settings_id" type="bigint">
                <constraints nullable="false" foreignKeyName="FK_m_loan_repayment_reminder-loan_repayment_reminder_settings_id" references="loan_repayment_reminder_settings(id)"/>
            </column>
            <column name="due_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="installment_number" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="principal_amount_outstanding" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="interest_amount_outstanding" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="fees_charge_amount_outstanding" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="penalty_charge_amount_outstanding" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_amount_outstanding" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_overdue_amount" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="product_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="client_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="group_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="message_status" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="createdby_id" type="bigint">
                <constraints nullable="true" foreignKeyName="FK_m_loan_repayment_reminder-created_by" references="m_appuser(id)"/>
            </column>
            <column name="lastmodifiedby_id" type="bigint">
                <constraints nullable="true" foreignKeyName="FK_m_loan_repayment_reminder-lastmodifiedby_id" references="m_appuser(id)"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false" />
            </column>
            <column name="lastmodified_date" type="timestamp" defaultValueComputed="now()">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>
